        <append>true</append>
      </file>
      <file id="scheduler-target">
        <filename>${app.home}/logs/scheduler.log</filename>
        <format>%5.5{priority} %{time} [%8.8{category}] (%{context}): %{message}\n%{throwable}</format>
        <append>true</append>
      </file>
    </targets>
  </logs>

  <policy>
    <grant code-base="file:${app.home}${/}blocks${/}*">
      <permission class="java.security.AllPermission" />
    </grant>

    <grant code-base="file:${app.home}${/}lib${/}*">
      <permission class="java.security.AllPermission" />
    </grant>
  </policy>

</server>
